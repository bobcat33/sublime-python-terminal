[
    // Open Command Prompt via Terminus
    { "keys": ["alt+`"], "command": "toggle_terminus_panel", "args": {
            "cwd": "${file_path:${folder}}"
        }
    },
    
    // Close Terminus
    {
        "keys": ["ctrl+b"],
        "command": "terminus_close",
        "context": [{"key": "terminus_view"}]
    },

    {
    	"keys": ["ctrl+w"],
    	"command": "terminus_close",
    	"context": [{"key": "terminus_view"}]
    },

    {
        "keys": ["escape"],
        "command": "terminus_close",
        "context": [{"key": "terminus_view"}]
    }
]
